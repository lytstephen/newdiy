<% @page_title = 'YOUR CART' %>

<% if @order.nil? or @order.line_items.length == 0 %>
	
	<div class="well text-center">
		<h4>NO ITEMS IN YOUR CART.</h4><br/>
		<%= link_to 'Browse Courses', courses_path, class: 'btn btn-primary' %>
	</div>
	
<% else %>

	<%= render 'progress_bar' %>

	<h3>Order Details</h3>

	<div class="well">
		<section class="col-md-8 col-md-offset-2">
			<div id="cart">
				<%= render @order %>
			</div>
			<% if user_signed_in? %>
				<%= link_to 'Checkout', checkout_order_path(@order), class: 'btn btn-primary btn-lg', 
					style: 'float:right' %>
			<% else %>
				<%= link_to 'Checkout', checkout_signup_order_path(@order), class: 'btn btn-primary btn-lg', 
					style: 'float:right' %>
			<% end %>
		</section>
		<section class="row">&nbsp;</section>
	</div>

<% end %>















