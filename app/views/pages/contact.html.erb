	</div>

</section>

<div class="row">&nbsp;</div>

<hr>

<section class="col-md-6">
	<div class="well">

		<h4>Customer Support:</h4>
		<p><strong>Phone:</strong> +852 1234-5678</p>
		<p><strong>Fax:</strong>+852 2345-6789</p>
		<p><strong>Email:</strong> support@diy.com</p>

		<div class="row">&nbsp;</div>

		<h4>General Inquiry:</h4>
		<p><strong>Phone:</strong> +852 1234-5678</p>
		<p><strong>Fax:</strong>+852 2345-6789</p>
		<p><strong>Email:</strong> info@diy.com</p>

		<div class="row">&nbsp;</div>

		<h4>Where to Find Us?</h4>
		<p>8E Pylon Tower, 12-16 Fui Yiu Kok Street, Tsuen Wan, N.T.</p>

		<div class="row">&nbsp;</div>

	</div>
</section>

<section class="col-md-6">
	<div class="well">
		<h4 class="text-center">Leave Us a Message!</h4>
		<%= form_tag do %>
			<div class="form-group">
			  <%= label_tag(:name, "Name")%>
			  <%= text_field_tag(:name, '', class: 'form-control')  %>
		  </div>
			<div class="form-group">
			  <%= label_tag(:email, "Email")%>
			  <%= text_field_tag(:email, '', class: 'form-control')  %>
		  </div>
			<div class="form-group">
			  <%= label_tag(:message, "Message")%>
			  <%= text_area_tag(:message, '', size: '20x6', class: 'form-control')  %>
		  </div>
		  <%= submit_tag 'Submit', class: 'btn btn-primary' %>
		<% end %>
	</div>
</section>