<% @page_title = 'WELCOME, ADMIN ' + current_user.first_name.upcase + "!" %>

<div class="row">
	
	<section class="col-md-6">
		<h4>Recent Orders</h4>
		<div class="well">
			<section class="dashboard_table">
				<!-- if all orders shipped, display "no pending orders to be shipped" -->
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>Date</th>
						<th>Total</th>
						<th>Payment</th>
						<th>Shipping</th>
					</tr>
					<% (1..3).each do %>
						<tr>
							<td>1</td>
							<td>4/6/2015</td>
							<td>$300</td>
							<td>Paid</td>
							<td>Pending</td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage Orders', '#', class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

	<section class="col-md-6">
		<h4>Latest Courses</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>Course Title</th>
						<th>Created</th>
						<th>Approved</th>
					</tr>
					<% @courses.each do |course| %>
						<tr>
							<td><%= course.id %></td>
							<td><%= course.title %></td>
							<td><%= course.created_at.to_date %></td>
							<td><%= course.approved ? 'yes' : 'no' %></td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage Courses', admin_manage_courses_path, class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

</div>

<div class="row">
	
	<section class="col-md-6">
		<h4>Newest Users</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>First</th>
						<th>Last</th>
						<th>Join Date</th>
						<th>Active?</th>
					</tr>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.id %></td>
							<td><%= user.first_name %></td>
							<td><%= user.last_name %></td>
							<td><%= user.created_at.to_date %></td>
							<td><%= user.active ? 'yes' : 'no' %></td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage Users', users_path, class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

	<section class="col-md-6">
		<h4>Categories</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<% @categories.each do |category| %>
						<tr>
							<td><%= category.name %></td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage Categories', categories_path, class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

</div>