<div class="col-md-12">
	<h3>CATEGORIES</h3>
</div>

<%= render 'side_nav' %>

<div class="col-md-9">

	<% @courses.each do |course| %>
		<section class="col-md-4">
			<div class="well course">
				<% unless course.featured_image.blank? %>
					<%= image_tag course.featured_image.url(:small), class: 'img-thumbnail center' %>
				<% else %>
					<img src="http://placehold.it/200x200?text=No+Image" class="img-thumbnail center" />
				<% end %>
				<h4><%= course.title %></h4>
				<p class="author">By <%= course.seller.full_name %></p>
				<%= link_to 'I WANT TO LEARN THIS', course_path(course), class: 'btn btn-primary learn_this' %>
			</div>
		</section>
	<% end %>

</div>
