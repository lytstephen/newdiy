<% @page_title = @course.title %>

<% if @course.user_id == current_user.id %>
	<% @title_right = link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-primary' %>
<% end %>

<section class="row">
	<div class="col-md-7">

		<section class="row text-center embed-responsive embed-responsive-16by9">
			<iframe class="embed-responsive-item"  src="<%= @course.video_link %>"></iframe>
		</section>

		<section class="row">&nbsp;</section>

		<section class="row">
			<div class="col-md-4 text-center">
				<% unless @course.featured_image.blank? %>
					<%= image_tag @course.featured_image.url(:thumbnail), class: 'img-thumbnail center' %>
				<% else %>
					<img class="img img-thumbnail" src="http://placehold.it/180x180?text=No+Image" />
				<% end %>
			</div>
			<div class="col-md-4 text-center">
				<% unless @course.image1.blank? %>
					<%= image_tag @course.image1.url(:thumbnail), class: 'img-thumbnail center' %>
				<% else %>
					<img class="img img-thumbnail" src="http://placehold.it/180x180?text=No+Image" />
				<% end %>
			</div>
			<div class="col-md-4 text-center">
				<% unless @course.image2.blank? %>
					<%= image_tag @course.image2.url(:thumbnail), class: 'img-thumbnail center' %>
				<% else %>
					<img class="img img-thumbnail" src="http://placehold.it/180x180?text=No+Image" />
				<% end %>
			</div>
		</section>

	</div>

	<div class="col-md-5">

		<section class="well">
			<p><b>Author: </b><%= @course.seller.full_name %></p>
			<p><b>Date Created: </b><%= @course.created_at.to_date %></p>
			<hr/>
			<h5>MATERIALS NEEDED:</h5>
			<hr/>
			<section class="materials_needed">
				<%= simple_format @course.materials %>
			</section>
			<h5>PRICE</h5>
			<hr/>
			<p>VIDEO: $<%= @course.video_cost %></p>
			<p>MATERIALS: $<%= @course.material_cost %></p>
		</section>

		<div class="row">
			<section class="col-md-6 text-center">
				<h5>BUY VIDEO</h5>
				<%= link_to 'Add To Cart', create_video_line_item_path(course_id: params[:id]), method: :post, class: 'btn btn-primary' %>
			</section>
			<section class="col-md-6 text-center">
				<h5>BUY MATERIALS</h5>
				<%= link_to 'Add To Cart', create_materials_line_item_path(course_id: params[:id]), method: :post, class: 'btn btn-primary' %>
			</section>
		</div>

	</div>
</section>

<div class="row">&nbsp;</div>

<section class="row">
	<h3 class="text-center">SIMILAR IDEAS</h3>
	<hr/>
	<% @courses.each do |course| %>
	<div class="col-md-3 text-center">
		<% unless course.featured_image.blank? %>
			<%= image_tag course.featured_image.url(:medium), class: 'img img-thumbnail' %>
		<% else %>
			<img src="http://placehold.it/230x230?text=No+Image" class='img img-thumbnail' />
		<% end %>
		<h5><%= course.title %></h5>
		<p>By <%= course.seller.full_name %></p>
	</div>
	<% end %>
</section>

<section class="row"><hr/></section>












