<% @page_title = 'WELCOME, ' + current_user.first_name.upcase + "!" %>

<div class="row">
	
	<section class="col-md-6">
		<h4>Orders to be shipped</h4>
		<div class="well">
			<section class="dashboard_table">
				<!-- if all orders shipped, display "no pending orders to be shipped" -->
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>Date</th>
						<th>Total</th>
						<th>Payment</th>
						<th>Shipping</th>
					</tr>
					<% (1..3).each do %>
						<tr>
							<td>1</td>
							<td>4/6/2015</td>
							<td>$300</td>
							<td>Paid</td>
							<td>Pending</td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage My Orders', '#', class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

	<section class="col-md-6">
		<h4>My Courses</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>Course Title</th>
						<th>Created</th>
						<th>Earnings</th>
					</tr>
					<% @courses.each do |course| %>
						<tr>
							<td><%= course.id %></td>
							<td><%= course.title %></td>
							<td><%= course.created_at.to_date %></td>
							<td>$1000</td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'Manage My Courses', '#', class: 'btn btn-primary btn-sm' %>&nbsp;
			<%= link_to 'Upload a New Course', '#', class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

</div>

<div class="row">
	
	<section class="col-md-6">
		<h4>My Purchases</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<tr>
						<th>ID</th>
						<th>Date</th>
						<th>Total</th>
						<th>Payment</th>
						<th>Shipping</th>
					</tr>
					<% (1..3).each do %>
						<tr>
							<td>1</td>
							<td>4/6/2015</td>
							<td>$300</td>
							<td>Paid</td>
							<td>Shipped</td>
						</tr>
					<% end %>
				</table>
			</section>
			<%= link_to 'View Order History', '#', class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

	<section class="col-md-6">
		<h4>My Account Info</h4>
		<div class="well">
			<section class="dashboard_table">
				<table class="table table-striped">
					<tr>
						<td><b>First Name: </b><%= current_user.first_name %></td>
						<td><b>Shipping Address:</b></td>
					</tr>
					<tr>
						<td><b>Last Name: </b><%= current_user.last_name %></td>
						<td><%= current_user.shipping_add1 %></td>
					</tr>
					<tr>
						<td><b>Email: </b><%= current_user.email %></td>
						<td><%= current_user.shipping_add2 %></td>
					</tr>
					<tr>
						<td><b>Phone: </b><%= current_user.phone %></td>
						<td>&nbsp;</td>
					</tr>
				</table>
			</section>
			<%= link_to 'Manage Account Info', edit_user_registration_path, class: 'btn btn-primary btn-sm' %>
		</div>
	</section>

</div>